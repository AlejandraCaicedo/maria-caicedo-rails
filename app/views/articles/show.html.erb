<div class="min-h-full flex items-center justify-center py-6 px-4 sm:px-6 lg:px-8">
  <div class="max-w-ld w-full space-y-8">

    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        <%= @article.title %>
      </h2>
      <h2 class="mt-6 text-center text-sm text-gray-900">
        <label class="text-sm text-gray-900">Author: </label>
        <%= @article.user.username %>
        <label class="text-sm text-gray-900">, created at </label>
        <%= @article.created_at.strftime("%d %B, %Y") %>
      </h2>
    </div>

    <section class="section2" id="AboutUs">
      <table>
        <tr>
          <td>
            <img src="https://images.unsplash.com/photo-1499083097717-a156f85f0516?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=751&q=80" alt="AboutUs">
          </td>
          <td>
            <p> <%= @article.body %> </p> 
          </td>
        </tr>
      </table>
		</section>
    
    <div class="mt-4 space-y-2">
        <h2 class = 'mt-5 mb-5 text-center font-semibold text-xl tracking-tight pt-5'>Comments</h2>
          <%= render @article.comments %>
        <h2 class = 'mt-5 mb-5 text-center font-semibold text-xl tracking-tight'>Add a comment:</h2>
          <%= render 'comments/form' %>
    </div>

  </div>
</div>