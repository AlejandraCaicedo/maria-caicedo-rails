<div class="flex flex-col m-5 my-10 border" >
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Author
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Title
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Created at
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Status
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Actions
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @articles.each do |article| %>
              <% unless article.archived? %>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-10 w-10">
                        <% if article.user.gender == 'Female' %>
                          <img class="h-10 w-10 rounded-full" src="https://cdn-icons-png.flaticon.com/512/2922/2922561.png" alt="">
                        <% else %>
                          <img class="h-10 w-10 rounded-full" src="https://cdn-icons-png.flaticon.com/512/265/265674.png" alt="">
                        <% end %>
                      </div>
                      <div class="ml-4">
                        <% if current_user == article.user %>
                          <div class="text-sm font-medium text-gray-900">
                            <%= link_to article.user.username, edit_user_registration_path %>
                          </div>
                        <% else %>
                          <div class="text-sm font-medium text-gray-900">
                            <%= article.user.username %>
                          </div>
                        <% end %>
                        <div class="text-sm text-gray-500">
                          <%= article.user.email %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">
                      <li>
                        <%= link_to article.title, article %>
                      </li>
                    </div>
                    <div class="text-sm text-gray-500">Technology</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                      <%= article.created_at.strftime("%d %B, %Y") %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                      <%= article.status %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <div class="flex items-center justify-between flex-wrap bg-teal-500 p-6">
                      <div class="inline-flex">
                        <%= link_to "Read", article, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded-l" %>
                        <% if current_user == article.user %>
                          <%= link_to "Edit", edit_article_path(article), class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 " %>
                          <%= link_to "Destroy", article_path(article), method: :delete, 
                            class: "bg-gray-300 hover:bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded-r ", data: { confirm: "Are you sure?" } %>
                        <% end %>
                      </div>
                    </div>
                  </td>
                </tr>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
