<div class="min-h-full flex items-center justify-center py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="mt-8 space-y-6">

      <%= form_with model: article do |form| %>
        
        <div>
          <%= form.label :title, class: "text-sm text-gray-900" %>
          <%= form.text_field :title, autofocus: true, autocomplete: "title" , placeholder: "Article title", class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %> <br />
          <% article.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>

        <div>
          <%= form.label :body, class: "text-sm text-gray-900" %>
          <%= form.text_area :body, autofocus: true, autocomplete: "body" , placeholder: "Article body", class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %> <br/>
          <% article.errors.full_messages_for(:body).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>

        <div class="text-gray-900 cursor-default select-none relative py-2 pl-3 pr-9" >
          <%= form.label :status, class: "text-sm text-gray-900" %>
          <%= form.select :status, ['public', 'private', 'archived'], selected: 'public'  %>
        </div>

        <button class="group relative w-full flex justify-center py-2 px-4 my-5 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Save article</button>

      <% end %>

    </div>
  </div>
</div>
